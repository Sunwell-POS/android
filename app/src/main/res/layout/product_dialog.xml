<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--<ScrollView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->

        <LinearLayout android:orientation="vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_space"
                android:layout_marginBottom="@dimen/normal_extra_space"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_space"
                    android:layout_marginLeft="@dimen/normal_space"
                    android:textSize="@dimen/large_font"
                    android:textStyle="bold"
                    android:text="@string/add_product"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/normal_short_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="@dimen/short_text"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:text="@string/name" />

                <EditText
                    android:id="@+id/text_name"
                    android:layout_width="@dimen/normal_long_input"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:inputType="textPersonName"
                    android:hint="Name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/normal_short_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="@dimen/short_text"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:text="@string/category" />

                <LinearLayout
                    android:id="@+id/panel_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinner_category"
                        android:layout_width="@dimen/normal_long_input"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/long_space">

                        <TextView
                            android:id="@+id/text_no_category"
                            android:layout_width="@dimen/normal_long_text"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/no_category"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/normal_short_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="@dimen/short_text"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:text="@string/metric" />

                <Spinner
                    android:id="@+id/spinner_metric"
                    android:layout_width="@dimen/normal_long_input"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:entries="@array/array_metric"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/long_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="@dimen/short_text"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:text="@string/price" />

                <EditText
                    android:id="@+id/input_price"
                    android:layout_width="@dimen/normal_short_input"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_use_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_short_space"
                android:layout_marginLeft="@dimen/normal_short_space"
                android:text="@string/use_stock" />

            <CheckBox
                android:id="@+id/cb_use_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_short_space"
                android:layout_marginLeft="@dimen/normal_short_space"
                android:text="@string/use_discount" />

            <CheckBox
                android:id="@+id/cb_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_short_space"
                android:layout_marginLeft="@dimen/normal_short_space"
                android:layout_marginBottom="@dimen/long_space"
                android:text="@string/active" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/normal_short_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="@dimen/short_text"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:text="@string/barcode" />

                <EditText
                    android:id="@+id/input_barcode"
                    android:layout_width="@dimen/normal_long_input"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/normal_short_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="@dimen/short_text"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:text="@string/image" />

                <EditText
                    android:id="@+id/text_image"
                    android:layout_width="@dimen/normal_short_input"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:inputType="text" />

                <Button
                    android:id="@+id/button_choose_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_file" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/button_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/close" />

                <Button
                    android:id="@+id/button_add_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_product" />
            </LinearLayout>
        </LinearLayout>
    <!--</ScrollView>-->
</ScrollView>