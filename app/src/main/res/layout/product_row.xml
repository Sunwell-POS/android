<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_no"
        android:layout_width="@dimen/extra_short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:text="1" />

    <ImageView
        android:id="@+id/image_product"
        android:layout_width="@dimen/big_image"
        android:layout_height="@dimen/big_image"
        android:layout_marginLeft="@dimen/normal_short_space"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="@dimen/normal_short_text"
        android:minWidth="@dimen/normal_short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
    />

    <TextView
        android:id="@+id/text_metric"
        android:layout_width="@dimen/short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        />

    <TextView
        android:id="@+id/text_price"
        android:layout_width="@dimen/short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        />

    <TextView
        android:id="@+id/text_category"
        android:layout_width="@dimen/short_long_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        />

    <TextView
        android:id="@+id/text_barcode"
        android:layout_width="@dimen/short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        />

    <TextView
        android:id="@+id/text_stock"
        android:layout_width="@dimen/short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        />

    <TextView
        android:id="@+id/text_discount"
        android:layout_width="@dimen/short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        />

    <TextView
        android:id="@+id/text_active"
        android:layout_width="@dimen/short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        />

    <LinearLayout
        android:layout_width="@dimen/short_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_edit"
            android:layout_width="@dimen/extra_small_image"
            android:layout_height="@dimen/extra_small_image"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/edit"/>

        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="@dimen/extra_small_image"
            android:layout_height="@dimen/extra_small_image"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/delete"/>

    </LinearLayout>

</LinearLayout>