<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

     <!--dibungkus agar parent layout bisa melebar wrap content sesuai sub linear layout yang terpanjang-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_space"
        android:layout_marginBottom="@dimen/normal_long_space"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_space"
            android:layout_marginLeft="@dimen/normal_space"
            android:textSize="@dimen/large_font"
            android:textStyle="bold"
            android:text="@string/add_customer" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="@dimen/normal_short_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:text="@string/member_no" />

        <EditText
            android:id="@+id/input_member_no"
            android:layout_width="@dimen/normal_long_input"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/normal_short_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:text="@string/name" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="@dimen/normal_long_input"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/normal_short_space"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="@dimen/normal_short_text"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_short_space"
                android:layout_marginLeft="@dimen/normal_short_space"
                android:text="@string/address" />
        </LinearLayout>

        <EditText
            android:id="@+id/input_address"
            android:layout_width="@dimen/normal_long_input"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:lines="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="@dimen/normal_short_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:text="@string/email" />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="192sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:inputType="textEmailAddress"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="@dimen/normal_short_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:text="@string/gender" />

        <Spinner
            android:id="@+id/spinner_gender"
            android:layout_width="@dimen/normal_short_input"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/array_gender"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="@dimen/normal_short_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:text="@string/phone" />

        <EditText
            android:id="@+id/input_phone"
            android:layout_width="@dimen/normal_long_input"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:inputType="phone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="@dimen/normal_short_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:text="@string/birthdate" />

        <EditText
            android:id="@+id/input_birthdate"
            android:layout_width="@dimen/normal_long_input"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:inputType="date"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/normal_short_space"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView10"
                android:layout_width="@dimen/normal_short_text"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_short_space"
                android:layout_marginLeft="@dimen/normal_short_space"
                android:text="@string/memo" />
        </LinearLayout>

        <EditText
            android:id="@+id/input_memo"
            android:layout_width="@dimen/normal_long_input"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:lines="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close" />

        <Button
            android:id="@+id/button_add_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_customer" />
    </LinearLayout>


