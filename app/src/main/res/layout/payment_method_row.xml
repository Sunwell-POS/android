<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_no"
        android:layout_width="@dimen/extra_short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:maxLines="1"
        android:text="1"/>


    <TextView
        android:id="@+id/text_name"
        android:layout_width="@dimen/normal_short_text"
        android:minWidth="@dimen/normal_short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:layout_weight="1"
        android:maxLines="1"
    />

    <TextView
        android:id="@+id/text_method"
        android:layout_width="@dimen/normal_short_text"
        android:minWidth="@dimen/normal_short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:visibility="@string/secondary_column"/>

    <!--<TextView-->
        <!--android:id="@+id/text_active"-->
        <!--android:layout_width="72dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="6dp"-->
        <!--android:maxLines="1"-->
        <!--/>-->

    <LinearLayout
        android:layout_width="@dimen/short_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:orientation="horizontal"
        android:visibility="@string/secondary_column">

        <ImageView
            android:id="@+id/image_active"
            android:layout_width="@dimen/extra_small_image"
            android:layout_height="@dimen/extra_small_image"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/wrong" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_discount"
        android:layout_width="@dimen/short_long_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:maxLines="1"
        android:visibility="@string/secondary_column"/>

    <TextView
        android:id="@+id/text_min_payment"
        android:layout_width="@dimen/short_long_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:maxLines="1"
        android:visibility="@string/secondary_column"/>

    <TextView
        android:id="@+id/text_max_payment"
        android:layout_width="@dimen/short_long_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:maxLines="1"
        android:visibility="@string/secondary_column"/>

    <LinearLayout
        android:layout_width="@dimen/short_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_edit"
            android:layout_width="@dimen/normal_big_button"
            android:layout_height="@dimen/normal_big_button"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/edit"/>

        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="@dimen/normal_big_button"
            android:layout_height="@dimen/normal_big_button"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/delete"/>

    </LinearLayout>

</LinearLayout>