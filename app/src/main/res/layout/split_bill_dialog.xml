<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_space">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/normal_space"
            android:layout_marginBottom="@dimen/normal_extra_space"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_space"
                android:layout_marginLeft="@dimen/normal_space"
                android:textSize="@dimen/large_font"
                android:textStyle="bold"
                android:text="@string/split_bill"
                />
        </LinearLayout>

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/panel_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/long_space">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/normal_space">
                    <TextView
                        android:layout_width="@dimen/short_long_text"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normal_short_space"
                        android:layout_marginLeft="@dimen/normal_short_space"
                        android:textStyle="bold"
                        android:text="@string/name"/>
                    <TextView
                        android:layout_width="@dimen/short_long_text"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normal_short_space"
                        android:layout_marginLeft="@dimen/normal_short_space"
                        android:textStyle="bold"
                        android:text="@string/qty"
                        android:visibility="@string/secondary_column"/>
                    <TextView
                        android:layout_width="@dimen/short_text"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normal_short_space"
                        android:layout_marginLeft="@dimen/normal_short_space"
                        android:textStyle="bold"
                        android:text="@string/bill1"/>
                    <TextView
                        android:layout_width="@dimen/normal_short_input"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/normal_short_space"
                        android:layout_marginLeft="@dimen/normal_short_space"
                        android:textStyle="bold"
                        android:text="@string/bill2"
                        />
                    </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end">

        <Button
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close" />

        <Button
            android:id="@+id/button_split_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/split_bill" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>