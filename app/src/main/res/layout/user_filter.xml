<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/normal_space">

    <TextView
        android:layout_width="@dimen/extra_short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space" />

    <TextView
        android:layout_width="@dimen/big_image"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="@dimen/normal_short_text"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="@dimen/normal_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:visibility="@string/secondary_column"
        />

    <Spinner
        android:id="@+id/spinner_user_group"
        android:layout_width="@dimen/normal_short_text"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_short_space"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:visibility="@string/secondary_column"
        />


    <LinearLayout
        android:layout_width="@dimen/short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:orientation="horizontal"
        android:visibility="@string/secondary_column">


    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/short_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_search"
            android:layout_width="@dimen/normal_big_button"
            android:layout_height="@dimen/normal_big_button"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/search"/>


    </LinearLayout>L

</LinearLayout>