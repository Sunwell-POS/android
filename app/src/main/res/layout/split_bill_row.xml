<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/normal_space">

    <TextView
        android:id="@+id/text_product"
        android:layout_width="@dimen/short_long_text"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_short_space"
        android:layout_marginLeft="@dimen/normal_short_space" />
    <TextView
        android:id="@+id/text_total_qty"
        android:layout_width="@dimen/short_long_text"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_short_space"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:visibility="@string/secondary_column"/>
    <TextView
        android:id="@+id/text_bill1_qty"
        android:layout_width="@dimen/short_text"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_short_space"
        android:layout_marginLeft="@dimen/normal_short_space" />
    <Button
        android:id="@+id/button_neg_qty"
        android:layout_width="@dimen/big_button"
        android:layout_height="@dimen/big_button"
        android:layout_marginStart="@dimen/normal_short_space"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:text="-" />
    <EditText
        android:id="@+id/input_qty"
        android:layout_width="@dimen/short_input"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />
    <Button
        android:id="@+id/button_plus_qty"
        android:layout_width="@dimen/big_button"
        android:layout_height="@dimen/big_button"
        android:layout_marginRight="@dimen/normal_space"
        android:text="+" />

</LinearLayout>