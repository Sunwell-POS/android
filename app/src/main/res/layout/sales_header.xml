    <TextView
        android:id="@+id/text_cashier"
        android:layout_width="@dimen/normal_short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:textStyle="bold"
        android:text="@string/cashier"
        android:visibility="@string/secondary_column"/>

    <TextView
        android:id="@+id/text_status"
        android:layout_width="@dimen/short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:textStyle="bold"
        android:text="@string/status"
        android:visibility="@string/secondary_column"/>

    <TextView
        android:id="@+id/text_action"
        android:layout_width="@dimen/short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:textStyle="bold"
        android:text="@string/action"
        />

