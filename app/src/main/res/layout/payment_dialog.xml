<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/normal_space"
        android:layout_marginBottom="@dimen/normal_extra_space"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_space"
            android:layout_marginLeft="@dimen/normal_space"
            android:textSize="@dimen/large_font"
            android:textStyle="bold"
            android:text="@string/payment" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="@dimen/short_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:text="@string/payment" />

        <Spinner
            android:id="@+id/spinner_payment"
            android:layout_width="@dimen/normal_long_input"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/normal_short_space"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="@dimen/short_text"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_short_space"
                android:layout_marginLeft="@dimen/normal_short_space"
                android:text="@string/memo" />
        </LinearLayout>

        <EditText
            android:id="@+id/input_memo"
            android:layout_width="@dimen/normal_long_input"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:lines="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:background="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_space"
        android:gravity="right"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_subtotal"
                android:layout_width="@dimen/normal_short_text"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/normal_short_space"
                android:textAlignment="textEnd"
                android:text="@string/subtotal" />

            <TextView
                android:id="@+id/text_subtotal_amount"
                android:layout_width="@dimen/normal_short_text"
                android:layout_height="wrap_content"
                android:text="-" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_discount"
                android:layout_width="@dimen/normal_short_text"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/normal_short_space"
                android:textAlignment="textEnd"
                android:text="@string/discount" />

            <TextView
                android:id="@+id/text_discount_amount"
                android:layout_width="@dimen/normal_short_text"
                android:layout_height="wrap_content"
                android:text="-" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_service"
                android:layout_width="@dimen/normal_short_text"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/normal_short_space"
                android:textAlignment="textEnd"
                android:text="@string/service" />

            <TextView
                android:id="@+id/text_service_amount"
                android:layout_width="@dimen/normal_short_text"
                android:layout_height="wrap_content"
                android:text="-" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_tax"
                android:layout_width="@dimen/normal_short_text"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/normal_short_space"
                android:textAlignment="textEnd"
                android:text="@string/tax" />

            <TextView
                android:id="@+id/text_tax_amount"
                android:layout_width="@dimen/normal_short_text"
                android:layout_height="wrap_content"
                android:text="-" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_total"
                android:layout_width="@dimen/normal_short_text"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/normal_short_space"
                android:textSize="@dimen/large_font"
                android:textAlignment="textEnd"
                android:text="@string/total" />

            <TextView
                android:id="@+id/text_total_amount"
                android:layout_width="@dimen/normal_short_text"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large_font"
                android:text="-" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPayment"
            android:layout_width="@dimen/short_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:text="@string/payment" />

        <EditText
            android:id="@+id/input_payment"
            android:layout_width="@dimen/normal_short_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewChange"
            android:layout_width="@dimen/normal_short_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:text="@string/change" />

        <TextView
            android:id="@+id/text_change_amount"
            android:layout_width="@dimen/normal_short_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close" />

        <Button
            android:id="@+id/button_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create" />
    </LinearLayout>
</LinearLayout>