<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#e0e9f2"
    >

    <!--  bagian layout_dashboard  -->
    <LinearLayout
        android:id="@+id/panel_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#0f7858">

        <ImageButton
            android:id="@+id/button_dashboard"
            android:layout_width="@dimen/big_button"
            android:layout_height="@dimen/big_button"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/home" />

        <TextView
            android:id="@+id/text_dashboards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_short_space"
            android:text="@string/dashboard"
            android:textAlignment="textStart"
            android:gravity="start"
            android:textColor="#f6f7f7"
            android:textSize="@dimen/mid_large_font"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel_pos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/button_pos"
                android:layout_width="@dimen/big_button"
                android:layout_height="@dimen/big_button"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/money" />

            <TextView
                android:id="@+id/text_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/normal_space"
                android:text="@string/point_of_sales"
                android:textAlignment="textStart"
                android:gravity="start"
                android:textColor="#0f7858"
                android:textSize="@dimen/mid_large_font"/>

            <ImageButton
                android:id="@+id/button_show_pos_sub_menu"
                android:layout_width="@dimen/normal_big_button"
                android:layout_height="@dimen/normal_big_button"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/down_arrow" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:layout_width="@dimen/big_button"
                android:layout_height="1dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/products"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/text_new_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/normal_space"
                android:text="@string/newVal"
                android:textAlignment="textStart"
                android:gravity="start"
                android:textColor="#0f7858"
                android:textSize="@dimen/mid_large_font"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>


    <!-- bagian sales -->

    <LinearLayout
