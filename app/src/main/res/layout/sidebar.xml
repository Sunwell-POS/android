            android:id="@+id/button_sales"
            android:layout_width="@dimen/big_button"
            android:layout_height="@dimen/big_button"
            app:srcCompat="@drawable/sales"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/text_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_space"
            android:text="@string/sales"
            android:textAlignment="textStart"
            android:gravity="start"
            android:textColor="#0f7858"
            android:textSize="@dimen/mid_large_font" />
    </LinearLayout>

