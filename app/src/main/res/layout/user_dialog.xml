<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--<ScrollView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->

        <LinearLayout android:orientation="vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_space"
                android:layout_marginBottom="@dimen/normal_extra_space"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_space"
                    android:layout_marginLeft="@dimen/normal_space"
                    android:textSize="@dimen/large_font"
                    android:textStyle="bold"
                    android:text="@string/add_user"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/normal_short_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="@dimen/short_text"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:text="@string/name" />

                <EditText
                    android:id="@+id/input_name"
                    android:layout_width="@dimen/normal_long_input"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:inputType="textPersonName"
                    android:hint="@string/name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/normal_short_space"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/short_text"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:text="@string/email" />

                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="@dimen/normal_long_input"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:inputType="textEmailAddress"
                    android:hint="@string/email" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/normal_short_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="@dimen/short_text"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:text="@string/type" />

                <Spinner
                    android:id="@+id/spinner_user_group"
                    android:layout_width="@dimen/normal_long_input"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/normal_short_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="@dimen/short_text"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:text="@string/image" />

                <EditText
                    android:id="@+id/text_image"
                    android:layout_width="@dimen/normal_short_input"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/normal_short_space"
                    android:layout_marginLeft="@dimen/normal_short_space"
                    android:inputType="text" />

                <Button
                    android:id="@+id/button_choose_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_file" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/button_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/close" />

                <Button
                    android:id="@+id/button_add_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_user" />
            </LinearLayout>
        </LinearLayout>

    <!--</ScrollView>-->
</ScrollView>