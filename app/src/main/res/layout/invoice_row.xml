<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageButton
        android:layout_width="@dimen/big_button"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/products"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/text_invoice_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/normal_space"
        android:text="@string/newVal"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textColor="#0f7858"/>

    <ImageButton
        android:id="@+id/button_delete"
        android:layout_width="@dimen/big_small_button"
        android:layout_height="@dimen/big_small_button"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/wrong"/>

</LinearLayout>