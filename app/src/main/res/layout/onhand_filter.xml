<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/normal_space">

    <TextView
        android:id="@+id/text_no"
        android:layout_width="@dimen/extra_short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space" />

    <TextView
        android:layout_width="@dimen/big_image"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:visibility="@string/secondary_column"/>

    <Spinner
        android:id="@+id/spinner_product"
        android:layout_width="@dimen/normal_short_text"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        />

    <EditText
        android:id="@+id/input_qty"
        android:layout_width="@dimen/short_long_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:maxLines="1"
        />

    <Spinner
        android:id="@+id/spinner_warehouse"
        android:layout_width="@dimen/normal_short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:visibility="@string/secondary_column"
        />

    <LinearLayout
        android:layout_width="@dimen/normal_short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="@string/secondary_column">

        <TextView
            android:id="@+id/text_last_inputted_date"
            android:layout_width="@dimen/short_long_text"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_short_space"

            />

        <ImageButton
            android:id="@+id/button_date"
            android:layout_width="@dimen/normal_big_button"
            android:layout_height="@dimen/normal_big_button"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/calendar"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/short_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_search"
            android:layout_width="@dimen/big_small_button"
            android:layout_height="@dimen/big_small_button"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/search"/>

        <!--<ImageButton-->
            <!--android:id="@+id/button_delete"-->
            <!--android:layout_width="@dimen/normal_big_button"-->
            <!--android:layout_height="@dimen/normal_big_button"-->
            <!--android:scaleType="fitXY"-->
            <!--app:srcCompat="@drawable/delete"/>-->

    </LinearLayout>
</LinearLayout>