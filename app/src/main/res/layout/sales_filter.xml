<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_no"
        android:layout_width="@dimen/extra_short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"/>


    <EditText
        android:id="@+id/input_invoice_no"
        android:layout_width="@dimen/short_long_text"
        android:minWidth="@dimen/short_long_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:layout_weight="1"
        />

    <EditText
        android:id="@+id/input_invoice_date"
        android:layout_width="@dimen/short_long_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:visibility="@string/secondary_empty_column"/>

    <EditText
        android:id="@+id/input_customer"
        android:layout_width="@dimen/normal_short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:visibility="@string/secondary_column"/>

    <EditText
        android:id="@+id/input_total_amount"
        android:layout_width="@dimen/short_long_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/input_method"
        android:layout_width="@dimen/short_long_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:visibility="@string/secondary_column"/>

    <!--<EditText-->
        <!--android:id="@+id/input_card_number"-->
        <!--android:layout_width="@dimen/short_long_text"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="@dimen/normal_short_space"-->
        <!--android:textStyle="bold"-->
        <!--/>-->

    <EditText
        android:id="@+id/input_cashier"
        android:layout_width="@dimen/normal_short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:textStyle="bold"
        android:visibility="@string/secondary_empty_column"/>

    <Spinner
        android:id="@+id/spinner_status"
        android:layout_width="@dimen/short_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:textStyle="bold"
        android:entries="@array/array_paid"
        android:visibility="@string/secondary_column"/>

    <LinearLayout
    android:layout_width="72dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:orientation="horizontal">

        <ImageButton
        android:id="@+id/button_search"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/search"/>

    </LinearLayout>

</LinearLayout>