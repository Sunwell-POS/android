<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/normal_space"
        android:layout_marginBottom="@dimen/normal_extra_space"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_space"
            android:layout_marginLeft="@dimen/normal_space"
            android:textSize="@dimen/large_font"
            android:textStyle="bold"
            android:text="@string/payment" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="@dimen/short_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:text="@string/payment" />

        <Spinner
            android:id="@+id/spinner_payment"
            android:layout_width="@dimen/normal_long_input"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/short_text"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:text="@string/name" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="@dimen/normal_long_input"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"/>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/normal_short_space"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="@dimen/short_text"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_short_space"
                android:layout_marginLeft="@dimen/normal_short_space"
                android:text="@string/memo" />
        </LinearLayout>

        <EditText
            android:id="@+id/input_memo"
            android:layout_width="@dimen/normal_long_input"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:lines="3"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_active"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_short_space"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:layout_marginBottom="@dimen/long_space"
        android:text="@string/active" />

    <CheckBox
        android:id="@+id/cb_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_short_space"
        android:layout_marginLeft="@dimen/normal_short_space"
        android:layout_marginBottom="@dimen/long_space"
        android:text="@string/discount" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close" />

        <Button
            android:id="@+id/button_add_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_payment_method" />
    </LinearLayout>
</LinearLayout>