<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_space"
            android:layout_marginLeft="@dimen/normal_space"
            android:textSize="@dimen/large_font"
            android:textStyle="bold"
            android:text="@string/add_category" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="@dimen/short_input"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:text="@string/name" />

        <EditText
            android:id="@+id/text_name"
            android:layout_width="@dimen/normal_long_input"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:inputType="textPersonName"
            android:hint="Name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/normal_short_space"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="@dimen/short_input"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:text="@string/color" />

        <LinearLayout
            android:id="@+id/panel_color"
            android:layout_width="@dimen/big_small_button"
            android:layout_height="@dimen/big_small_button"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/normal_short_space"
            android:layout_marginLeft="@dimen/normal_short_space"
            android:background="#0f7858">
        </LinearLayout>

        <!--<Button-->
